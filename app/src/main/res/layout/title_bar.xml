<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar"
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:background="@color/mythem"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/back_icon_big"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/title_imageview"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/myfood_title" />

    <ProgressBar
        android:id="@+id/title_progressbar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/title_imageview"
        android:indeterminateDrawable="@drawable/circle_progressbar"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/title_progressbar_imagebutton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/title_imageview"
        android:background="@drawable/refresh_icon_big"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/title_search_imagebutton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/search_icon_big"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/title_menu_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/overflow_icon_big"
        android:visibility="visible" />

</RelativeLayout>